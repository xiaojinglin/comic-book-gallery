@model List<ComicBookGallery.Models.ComicBook>
@{
    ViewBag.Title = "Comic Books";
}

<h2>@ViewBag.Title</h2>

<div class="row">
@foreach (var comicBook in Model)
{
    <div class="col-md-3">
        <h4>@Html.ActionLink(comicBook.DesplayText, "Detail",new { id = comicBook.Id })</h4>
        <a href="@Url.Action("Detail",new { id = comicBook.Id })">
            <img src="/Images/@comicBook.CoverImageFileName"
                 alt="@comicBook.DesplayText"
                 class="img-responsive" />
        </a>      
    </div>
}
</div>

